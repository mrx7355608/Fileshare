<div class="mx-auto w-full max-w-5xl">
    {{#if success_message}}
        <div class="mt-5 alert alert-success">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="stroke-current shrink-0 h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
            ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                /></svg>
            <span>{{success_message}}</span>
        </div>
    {{/if}}
    {{#if error_messages}}
        <div class="mt-5 alert alert-error">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="stroke-current shrink-0 h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
            ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"
                /></svg>
            <span>An un-expected error occured.</span>
        </div>
    {{/if}}
    {{! FILES LIST SECTION }}
    <section
        class="flex flex-wrap items-center justify-center gap-8 w-full mt-5"
    >
        {{#each files}}
            <div
                class="rounded-lg bg-orange-50 border-2 border-orange-100 p-4 w-80 h-48 flex flex-col justify-between"
            >
                <div class="w-full">
                    {{! FILE TYPE & NAME }}
                    <div class="flex gap-2 items-center mb-2">
                        <p
                            class="bg-orange-600 text-white p-1 rounded-md text-xs font-medium"
                        >
                            {{type}}
                        </p>
                        <h3
                            class="font-bold text-lg text-gray-800"
                        >{{name}}</h3>
                    </div>
                    {{! PASSWORD PROTECTED FLAG }}
                    {{#if isPasswordProtected}}
                        <div
                            class="flex items-center gap-1 text-gray-700 rounded-full"
                        >
                            <img class="w-5" src="/media/icons/lock.png" />
                            <h3 class="font-medium text-sm">Password Protected</h3>
                        </div>
                    {{/if}}
                </div>
                <div class="w-full">
                    {{! FILE SIZE & UPLOAD DATE INFO }}
                    <div class="flex justify-between w-full">
                        <span
                            class="text-orange-800 font-medium text-sm"
                        >{{size}}</span>
                        <span
                            class="text-orange-800 font-medium text-sm ml-2"
                        >{{createdAt}}</span>
                    </div>

                    {{! DOWNLOAD BUTTON }}
                    {{#if isPasswordProtected}}
                        <a
                            href="/download-file/{{id}}"
                            target="_blank"
                            class="btn btn-error font-medium text-sm tracking-wide mt-3 w-full btn-sm rounded-md"
                        >Download</a>
                    {{else}}
                        <a
                            href="{{downloadURL}}"
                            target="_blank"
                            class="btn btn-error font-medium text-sm tracking-wide mt-3 w-full btn-sm rounded-md"
                        >Download</a>
                    {{/if}}
                </div>

            </div>
        {{/each}}
    </section>
</div>